<table width="50%">

<% @posts.each do |post| %>
  <tr>
    <td>
		<span id="title"><%= header(post) %></span>
		<span id="url"><%= link(post) %></span>
		<div id="info">
			Posted by <%= post.user.name %>
			on <%= post.created_at.strftime("%b %d, %Y") %>
			| <%= link_to 'Comment', post_path(post, :anchor => "disqus_thread"), 'data-disqus-identifier' => post.id %></
		</div>
		<div id="tags">
			<% num = post.tags.count; i = 1 %>
			<% post.tags.each do |tag| %>
				<span id="tag"><%= link_to "##{tag.name}", tag %></span>
			<% if i < num %>&bull;<% i += 1 ; end %>
			<% end %>
		</div>
	</td>
  </tr>
<% end %>
</table>

<br/>

<%= will_paginate @posts %>

<%= page_entries_info @posts %>