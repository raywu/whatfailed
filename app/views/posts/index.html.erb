<h1>WhatFailed.Us</h1>
<p>
<h3>a collection of startup stories</h3>

<table>

<% @posts.each do |post| %>
  <tr>
    <td>
		<b>
		<%= title(post) %>
		</b>
	</td>
	<td><%= post.created_at %></td>
  </tr>
  <tr>
    <td><% post.tags.each do |tag| %>
		<%= link_to tag.name, tag %>
		<% end %>
	</td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <tr>
	<td><%= link_to 'Comment', post_path(post, :anchor => "disqus_thread"), 'data-disqus-identifier' => post.id %></td>
  </tr>
<% end %>
</table>

<br/>

<p>
	<%= will_paginate @posts %>	
</p>

<p>
	<%= page_entries_info @posts %>
</p>

<br />

<b><%= link_to 'Submit a New Post', new_post_path %></b>
