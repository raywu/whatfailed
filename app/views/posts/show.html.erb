<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <% if @post.url.blank? == false %>
  <%= link_to @post.url %>
  <% end %>
</p>

<p>
  <% if @post.content.blank? == false %>
  <b><%= 'Content:' %></b>
  <%= @post.content %>
  <% end %>
</p>

<p>
	<%= form_for(@post) do |f| %>
	<div class="field">
	<b><%= f.label :tag_tokens, "Tags:" %><b/>
	<%= f.text_field :tag_tokens, "data-pre" => @post.tags.map(&:attributes).to_json %>
	<%= f.submit 'Update' %>
	<% end %>
</p>

<p>
<%= render 'comment' %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
