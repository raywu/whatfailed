<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<!-- <p>
  <b>Url:</b>
  <%= @post.url %>
</p> -->

<!-- this follow only shows URL if URL exists -->
<p>
  <% if @post.url.blank? == false %>
  <%= link_to @post.url %>
  <% end %>
</p>

<!-- this following only shows Content if Content exists -->
<p>
  <% if @post.content.blank? == false %>
  <b><%= 'Content:' %></b>
  <%= @post.content %>
  <% end %>
</p>

<p>
<%= render 'tag' %>
</p>

<p>
<%= render 'comment' %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
