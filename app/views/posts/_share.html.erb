<table>
  <tr>
    <td><%= tweet_button(:url => post_url(@post), :text => "'#{@post.title}' #startuplessonslearned", :count => "horizontal" )%></td>
    <td><div class="fb-like" data-href="<%= post_url(@post) %>" data-send="false" data-layout="button_count" data-width="100" data-show-faces="false"></div></td>
    <td id="tag">
  <%= link_to("#{@post.votes_for} Up's", vote_for_post_path(@post), :method => :post ) %>
  <%= link_to("#{@post.votes_against} Down's", vote_against_post_path(@post), :method => :post) %>
    </td>
  </tr>
</table>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) {return;}
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
