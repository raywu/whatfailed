		  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
		  fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));</script>

		<div class="fb-like" data-href="http://stormy-journey-175.heroku.com/posts/#{self.id}" data-send="false" data-layout="button_count" data-width="100" data-show-faces="false"></div>
