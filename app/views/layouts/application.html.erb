<html>
 <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# whatfailed: http://ogp.me/ns/fb/whatfailed#">
 <meta property="fb:app_id"      content="297086536985505">
 <meta property="og:type"        content="<%= content_for?(:ogmetaurl) ? "whatfailed:article" : "website" %>">
 <meta property="og:url"         content="<%= content_for?(:ogmetaurl) ? "#{yield(:ogmetaurl)}".strip : "http://www.whatfailed.us/" %>">
 <meta property="og:title"       content="<%= content_for?(:title) ? yield(:title) : "WhatFailed.us" %>">
 <meta property="og:site_name"   content="WhatFailed.us">
 <meta property="og:description" content="startup insights">
 <meta property="og:image"       content="http://www.whatfailed.us/images/emu_twitter_logo.jpg">
 <link rel="canonical" href="http://www.whatfailed.us/" />
 <meta name="google-site-verification" content="4ccQVJEbRYim3rk-9HMTLJBhy2n3rg2jGg2i4VaJUV4" />
 <title><%= content_for?(:title) ? yield(:title) : "WhatFailed.us" %></title>
  <%= stylesheet_link_tag "960", "app", "token-input-facebook" %>
  <%= javascript_include_tag :defaults, "jquery.tokeninput" %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
  <%= auto_discovery_link_tag :atom, posts_path(:atom) %>
  <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-27696456-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</head>

<body>
	
<div id="container" class="container_12">
<div id="header" class="grid_12" >
  <div id="logo" class="grid_3 alpha" >
    <%= link_to image_tag("WhatFailed_1_small.png", :alt => "Home", :border => 0), :root %>
  </div><!--.logo-->
	 <div id="nav" class="grid_2" >
	   <span class="nav-button"><%= link_to 'Home', :root %></span>
	   <span class="nav-button"><%= link_to 'Submit New', new_post_path %></span>
   </div><!--.nav-->
   <div id="nav-user" class="grid_6 omega" >
     <span class="nav-button"><%= link_to 'WF Bkmrklt', 'javascript:var win = window.open( "http://localhost:3000/posts/new?popup=true&title=" + encodeURIComponent(document.title) + "&url=" + encodeURIComponent(document.location), "", "width=500,height=500,scrollbars=1" );'%></span>
     <span class="nav-button"><a href="http://whatfailed.wufoo.com/forms/m7x3s5/" onclick="window.open(this.href,  null, 'height=713, width=680, toolbar=0, location=0, status=1, scrollbars=1, resizable=1'); return false" title="Feedback">Feedback</a></span>
		<% if current_user %>
		  Signed in as <%= current_user.name %>
		  <span class="nav-button"><%= link_to "Sign Out", signout_path %></span>
		<% else %>
		  <span class="nav-button"><%= link_to "Sign In", signin_path %></span>
		<% end %>
  </div><!--.nav-user-->
</div><!--.header-->

<div id="content" class="grid_10" >
  <br/>
<div id="title" class="grid_7 push_1 alpha">
    <% if yield(:title).present? %>
      <h1><%= yield(:title) %></h1>
    <% end%>
</div><!--title-->
  
<div id="message" class="grid_2 push_1">
  <%- flash.each do |type, msg| -%>
  <div class="msg" id="<%= type %>"><%= msg %></div>
  <%- end -%>
</div><!--.message-->
    <%= yield %>
    <br style="clear:both;"/>
    <div id="paginate" class="push_1" style="text-decoration:none">
      <p><%= link_to 'Back', :back %></p>
    </div><!--.pagination-->  
</div><!-- .content -->
  <div id="sidebar" class="grid_2 omega" >
    <div style="margin-bottom:20px" ><%= link_to image_tag("feed-icon.png", :alt => "Atom Feed", :border => 0), posts_path(:atom) %></div>
    <h3>#FailTags</h3>
    <div style="margin-bottom:30px">
      <% Tag.includes(:posts).order('posts_count DESC').each do |tag| %>
      <div id="tag-index" style="padding:6px;">
      <%= link_to "##{tag.name} (#{tag.posts.length})", tag %>
    </div>
    <% end %>
    <div id="community">
      <div class="fb-like-box" data-href="http://www.facebook.com/apps/application.php?id=297086536985505" data-width="292" data-show-faces="false" data-stream="false" data-header="true"></div><br/>
      <div style="margin-left:10px"><a href="https://twitter.com/whatfailed" class="twitter-follow-button" data-show-count="false">Follow @whatfailed</a></div>
    </div><!--.community-->
  </div><!-- .sidebar -->
</div><!-- .container -->


